<Window x:Class="TravelAgency.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency"
        mc:Ignorable="d"
        Title="Statistics" Height="150" Width="450">
    <Grid>
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="VerticalAlignment" Value="Top"></Setter>
                <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                <Setter Property="FontSize" Value="18"></Setter>
            </Style>
        </Grid.Resources>
        <Label>Spent for discounts:</Label>
        <Label Margin="165, 0, 0, 0" x:Name="DiscountLabel" Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=SpentForDiscounts}"></Label>
        <Label Margin="0, 30, 0, 0">Most expensive trip:</Label>
        <Label Margin="170, 30, 0, 0" Content="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}, Path=MostExpensiveTrip}"></Label>
        <Button HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="70" Margin="30" Click="ButtonBase_OnClick">Ok</Button>
    </Grid>
</Window>
