<Window x:Class="TravelAgency.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgency"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="320" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="LoginButton" Click="LoginButton_Click" Content="Login" HorizontalAlignment="Center" Margin="163,0,75,30" VerticalAlignment="Bottom" Width="76" IsDefault="True"/>
        <TextBox Name="UsernameBox" HorizontalAlignment="Left" Height="23" Margin="97,30,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="186"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="97,70,0,0"  VerticalAlignment="Top" Width="186"/>
        <Label Name="UsernameLabel" Content="Username:" HorizontalAlignment="Left" Margin="26,27,0,0" VerticalAlignment="Top"/>
        <Label Name="PasswordLabel" Content="Password:" HorizontalAlignment="Left" Margin="30,67,0,0" VerticalAlignment="Top"/>
        <Button x:Name="RegisterButton" Click="RegisterButton_Click" Content="Register" HorizontalAlignment="Center" Margin="75,0,163,30" VerticalAlignment="Bottom" Width="76"/>
    </Grid>
</Window>
